# Makefile compiling and cleaning

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = rm -f

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean: *~ $(NAME)
	$(RM) *~ $(NAME)

oclean: $(OBJ)
	$(RM) $(OBJ)

fclean: *~ $(NAME) $(OBJ)
	$(RM) *~ $(NAME) $(OBJ)

re: $(OBJ)
	$(RM) $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
